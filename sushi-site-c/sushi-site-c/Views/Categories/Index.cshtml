@model IEnumerable<sushi_site_c.Models.Category>

@{
    ViewBag.Title = "Список категорій";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.ActionLink("Додати категорію", "Create", null, new { @class = "btn btn-success pul-right", style = "mardin-top" })
<h2>@ViewBag.title</h2>

@if(Model.Any())
{ 
<table class="table">
    <tr>
        <th>
            Назва категорії
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)

            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })


            </td>
        </tr>
    }

</table>
}
else
{
<div class="alert  alert-warning">
    Катеорії поки відсутні у базі даних
</div>
}
