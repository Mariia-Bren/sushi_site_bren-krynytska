    @using (Html.BeginForm())
    {

        <h2 class="text-sm-center text-warning" style="font-family:sans-serif;">Адреса доставки</h2>
        <fieldset>
            <div class="col">
                <b>
                    @Html.EditorForModel()
                </b>
            </div>
        </fieldset>
        <fieldset>
            <legend class="text-sm-center text-warning" style="text-align:center;">Оплата</legend>
            <p class="text-sm-center" style="font-family: sans-serif, Ravie; text-align: center;">
                Оплата замовлення лише після отримання.
                Для підтвердження Вашого замовлення введіть код: <b> "SUSHI "</b>
            </p>

            <div class="col" style="text-align:center;">

                <div class="editor-label">
                    @Html.Label("Код підвердження:")
                </div>

                <div class="editor-field">
                    @Html.TextBox("PromoCode")
                </div>
            </div>

        </fieldset>
        <div class="col" style="text-align:center; top:8px">
            <input type="submit" value="Підтвердити" />
        </div>

    }
</div>
