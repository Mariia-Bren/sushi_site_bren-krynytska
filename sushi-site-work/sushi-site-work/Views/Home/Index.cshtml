@model List<sushi_site_work.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

@{Html.RenderAction("SubCategoriesMenu", "Store");}


<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-50" src="https://localhost:44351/Images/Products%D1%81%D0%B5%D1%822.jpg" alt=" Рол тижня">
        </div>
        <div class="carousel-item">
            <img class="d-block w-50" src="https://localhost:44351/Images/Products%D1%81%D0%B5%D1%822.jpg" alt="Акціїїїї">
        </div>
        <div class="carousel-item">
            <img class="d-block w-50" src="https://localhost:44351/Images/Products%D1%81%D0%B5%D1%822.jpg" alt="Чорна п'ятниця">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<button type="button" class="btn btn-warning"><a href="@Url.Content("~/Store/")">У магазин</a></button>

<h3>Ваші<em> найулюбленіші </em>роли</h3>

<div class="row">

    @foreach (var album in Model)
    {<div class="col-md-4">
            <div class="card" style="width: 18rem;">

                <img src=@album.PhotoPath class="card-img-top" width="200px" />
                <div class="card-body">
                    <a href=@Url.Action("Details", "Store", new { id = album.Id })>
                        <h3> @album.Name<span class="badge badge-warning">TOP</span></h3>
                    </a>
                    <p class="card-text">@album.Description</p>
                    <p class="card-text">@album.Cost</p>
                    <button type="button" class="btn btn-warning">
                        <a href=@Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = album.Id }, "")></a>
                    </button>
                </div>
            </div>
        </div>
    }
</div>






