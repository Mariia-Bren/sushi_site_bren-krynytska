<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Суші</title>
    <!-- @Styles.Render("~/Content/css")
      @Scripts.Render("~/bundles/modernizr")-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link font-weight-normal" href="/Home/">Головна</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link font-weight-normal " href="/SubCategories/">Категорії</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link font-weight-normal" href="/Products/">Продукти</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link font-weight-normal" href="/Store/">Магазин</a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link font-weight-normal" href="/Checkout/AddressAndPayment/">Оплата</a>
                </li>
                @{Html.RenderAction("CartSummary", "ShoppingCart");}

                @Html.Partial("_LoginPartial")
            </ul>
        </div>
    
      </nav>  
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Сайт суші</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
